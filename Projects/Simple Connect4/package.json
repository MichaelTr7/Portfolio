{
  "name": "connect-four",
  "productName": "Simple Connect4",
  "version": "1.0.1",
  "description": "Minimalist Connect4 game",
  "main": "App.js",
  "author": "MichaelTr7",
  "license": "MIT",
  "homepage": "Simple_Connect4.com",
  "build": {
    "appId": "com.simpleconnect4.app",
    "directories": {
      "output": "build"
    },
    "productName": "Simple Connect4",
    "mac": {
      "target": [
        "dmg"
      ],
      "identity": null,
      "icon": "assets/MacOS_Icon.icns",
      "category": "public.app-category.board-games"
    },
    "dmg": {
      "background": "assets/background.tiff",
      "icon": "assets/MacOS_Icon.icns",
      "iconSize": 100,
      "window": {
        "width": 544,
        "height": 317
      },
      "contents": [
        {
          "x": 145,
          "y": 170
        },
        {
          "x": 399,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-packager ."
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "^22.8.0",
    "electron-packager": "^15.0.0"
  }
}
