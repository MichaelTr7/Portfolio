{
  "name": "gpa-calculator",
  "version": "1.0.0",
  "description": "GPA Graphing Calculator",
  "main": "App.js",
  "author": "Michael Troeung",
  "license": "MIT",
  "homepage": "GPA_Grapher.com",
  "build": {
    "appId": "com.gpagrapher.app",
    "extraFiles": [
      "Profile_Data"
    ],
    "directories": {
      "output": "build"
    },
    "productName": "GPA Grapher",
    "mac": {
      "target": [
        "dmg"
      ],
      "identity": null,
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "background": "assets/background.tiff",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "window": {
        "width": 544,
        "height": 430
      },
      "contents": [
        {
          "x": 145,
          "y": 277
        },
        {
          "x": 400,
          "y": 275,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "chart.js": "^2.9.3"
  },
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "^22.8.0"
  }
}
